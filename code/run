#!/usr/bin/env bash
set -ex

ROOT_DIR="../data"

# Find the subdirectory
SUB_DIR=$(find "$ROOT_DIR" -type d -name "ophys")

# Check if subdirectory exists
if [ -z "$SUB_DIR" ]; then
    echo "Subdirectory not found in $ROOT_DIR"
    exit 1
fi

echo $SUB_DIR
python -u run_capsule.py --data-dir $SUB_DIR --temp-dir ../scratch
