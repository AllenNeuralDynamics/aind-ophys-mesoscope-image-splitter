#!/usr/bin/env bash
set -ex

ROOT_DIR="../data"
# Find the subdirectory
ROOT_DIR="../data"
SUB_DIR=()
for dir in "$ROOT_DIR"/*/*phys; do
    if [ -d "$dir" ]; then
        SUB_DIR+=("$dir")
    fi
done

# Check if subdirectory exists
if [ -z "$SUB_DIR" ]; then
    echo "Subdirectory not found in $ROOT_DIR"
    exit 1
fi

echo $SUB_DIR
#python -u run_capsule.py --input-dir $SUB_DIR --temp ../scratch --output-dir ../results
